<!-- Menu Section -->
<section id="menu" class="menu section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h1>Menu</h1>
        <p>Check Our Tasty Menu</p>
    </div><!-- End Section Title -->

    <div class="container isotope-layout pb-5" data-default-filter="*" data-layout="masonry" data-sort="original-order">

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul class="menu-filters isotope-filters">
                    <li data-filter="*" class="filter-active">All</li>
                    <li data-filter=".Breakfast">Breakfast</li>
                    <li data-filter=".Lunch">Lunch</li>
                    <li data-filter=".Dinner">Dinner</li>
                </ul>
            </div>
        </div><!-- Menu Filters -->

        <div class=" row isotope-container" data-aos="fade-up" data-aos-delay="200">
        {{#each products}}

            <div class="col-lg-6 menu-item isotope-item {{this.product_category}}">
                <img src="/images/product_image/{{this._id}}.png" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">{{this.product_name}}</a><span>QAR {{this.product_price}}</span>
                </div>
                <div class="menu-ingredients">
                    {{this.product_description}}
                </div>
            </div><!-- Menu Item -->

        {{/each}}
        </div><!-- Menu Container -->
    </div>

</section><!-- /Menu Section -->

<script>
    var $grid = $('.isotope-container').isotope({
        // options
        itemSelector: '.isotope-item',
        layoutMode: 'fitRows',
    });

    // change is-checked class on buttons
    var $buttonGroup = $('.isotope-filters');
    $buttonGroup.on('click', 'li', function (event) {
        $buttonGroup.find('.filter-active').removeClass('filter-active');
        var $button = $(event.currentTarget);
        $button.addClass('filter-active');
        var filterValue = $button.attr('data-filter');
        $grid.isotope({ filter: filterValue });
    });

</script>